{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["ES2021"],
    "removeComments": true,
    "target": "ES2020",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "importsNotUsedAsValues": "remove",
    "strict": true,
    "moduleResolution": "node",
    "outDir": "./build"
  },
  "include": [
    "./src"
  ]
 }