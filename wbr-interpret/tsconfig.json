{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["ES2021"],
    "removeComments": true,
    "outDir": "./build/",
    "target": "ES2020",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "importsNotUsedAsValues": "remove",
    "strict": true,
    "declaration": true,
    "allowJs": true
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
