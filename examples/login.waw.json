{
	"meta":{
	   "params":[
		  "url",
		  "login",
		  "password"
	   ]
	},
	"workflow":[
	   {
		  "where":{
			 "selectors":[
				"button:text-matches(\"(accept|agree|souhlasím|allow)\", \"i\")"
			 ]
		  },
		  "what":[
			 {
				"type":"click",
				"args":[
				   "button:text-matches(\"(accept|agree|souhlasím|allow)\", \"i\")"
				]
			 }
		  ]
	   },
	   {
		"where":{
			"selectors": [
				":text-matches(\"(searching|loading)\",\"i\")"
			]
		},
		"what": [
			{
				"type": "waitForTimeout",
				"args": [
					2000
				]
			}
		]
	   },
	   {
		  "id":"login",
		  "where":{
			 "selectors":[
				"input[type=text], input[type=email], input[class*=login]",
				"input[type=password]"
			 ]
		  },
		  "what":[
			 {
				"type":"fill",
				"args":[
				   "input[type=text],input[type=email], input[class*=login]",
				   {
					  "$param":"login"
				   }
				]
			 },
			 {
				"type":"fill",
				"args":[
				   "input[type=password]",
				   {
					  "$param":"password"
				   }
				]
			 },
			 {
				"type":"press",
				"args":[
				   "input[type=password]",
				   "Enter"
				]
			 },
			 {
				"type":"waitForTimeout",
				"args":[
				   2000
				]
			 }
		  ]
	   },
	   {
		  "where":{
		  },
		  "what":[
			 {
				"type":"goto",
				"args":[
				   {
					  "$param":"url"
				   }
				]
			 },
			 {
				"type":"waitForLoadState",
				"args":[
				   
				]
			 },
			 {
				"type":"waitForTimeout",
				"args":[
				   3000
				]
			 }
		  ]
	   }
	]
 }